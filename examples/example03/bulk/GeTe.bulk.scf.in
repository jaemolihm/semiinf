 &control
  calculation  = 'scf'
  restart_mode = 'from_scratch'
  prefix       = 'GeTe.bulk'
  pseudo_dir   = '../pseudo/'
  outdir       = 'temp/'
 /
 &system
  ibrav        = 4
  celldm(1)    = 7.8948
  celldm(3)    = 2.5081
  nat          = 6
  ntyp         = 2
  ecutwfc      = 50
  noncolin     = .TRUE.
  lspinorb     = .TRUE.
  starting_magnetization(1) = 0.0
  ! GeTe is a narrow-gap insulator, but we use smearing
  ! since the number of k points is quite small.
  occupations  = 'smearing'
  smearing     = 'm-v'
  degauss      = 0.02
 /
 &electrons
  mixing_beta = 0.7
  conv_thr    = 1.d-8
 /
ATOMIC_SPECIES
 Ge 72.61 Ge.rel-pbesol-n-nc.UPF
 Te 127.6 Te.rel-pbesol-n-nc.UPF
